{
    "manifest_version": 3,
    "name": "Learning Task Calculator",
    "description": "A beautiful calculator for quickly determining grades from learning tasks with visual feedback.",
    "version": "2.2",
    "icons": {
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        },
        "default_title": "Learning Task Calculator"
    },
    "permissions": ["clipboardWrite"],
    "author": "Learning Task Calculator Team"
}
